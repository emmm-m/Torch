<LinearLayout
    android:id="@+id/item_layout"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="@color/md_white_1000"
    android:layout_marginBottom="1dp"
    android:orientation="horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img_message_item"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="10dp"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:orientation="vertical">

        <TextView
            android:id="@+id/nickname_message_item"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/textMid"
            android:textSize="@dimen/app_text_size_medium"/>

        <TextView
            android:id="@+id/content_message_item"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:textColor="@color/textLight"
            android:textSize="@dimen/app_text_size_small"/>
    </LinearLayout>

    <TextView
        android:id="@+id/time_message_item"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:layout_marginRight="5dp"
        android:textColor="@color/orange"
        android:textSize="@dimen/app_text_size_small"
        />

</LinearLayout>